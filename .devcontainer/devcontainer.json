{
  "name": "Bazzite AI Devcontainer",
  // Always uses latest pre-built image from GitHub Container Registry
  // Rebuild container (Ctrl+Shift+P -> "Rebuild Container") to get updates
  "image": "ghcr.io/atrawog/bazzite-ai-devcontainer:latest",
  "hostRequirements": {
    "gpu": "optional"
  },
  "runArgs": [
    "--device=nvidia.com/gpu=all",
    "--security-opt=label=disable"
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteUser": "devuser",
  "postCreateCommand": "nvidia-smi || echo 'âœ“ CPU-only mode: No GPU detected (this is fine for non-NVIDIA systems)'"
}
