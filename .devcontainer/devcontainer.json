{
  "name": "Bazzite AI Container (NVIDIA)",
  // Always uses latest pre-built NVIDIA image from GitHub Container Registry
  // For CPU-only development, use devcontainer-base.json instead
  // Rebuild container (Ctrl+Shift+P -> "Rebuild Container") to get updates
  "image": "ghcr.io/atrawog/bazzite-ai-container-nvidia:latest",
  "hostRequirements": {
    "gpu": "optional"
  },
  "runArgs": [
    "--device=nvidia.com/gpu=all",
    "--security-opt=label=disable"
  ],
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteUser": "devuser",
  "postCreateCommand": "nvidia-smi || echo '⚠️  GPU not detected - consider using devcontainer-base.json for CPU-only development'"
}
