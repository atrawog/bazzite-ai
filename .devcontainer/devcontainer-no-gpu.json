{
  "name": "Bazzite AI Devcontainer (CPU only)",
  "build": {
    "dockerfile": "../Containerfile.devcontainer",
    "context": "..",
    "args": {
      "FEDORA_VERSION": "42"
    }
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteUser": "devuser"
}
