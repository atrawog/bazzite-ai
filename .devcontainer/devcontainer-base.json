{
  "name": "Bazzite AI Container (Base - CPU only)",
  // Always uses latest pre-built base image from GitHub Container Registry
  // For GPU development, use devcontainer.json instead
  // Rebuild container (Ctrl+Shift+P -> "Rebuild Container") to get updates
  "image": "ghcr.io/atrawog/bazzite-ai-container:latest",
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-python.python",
        "ms-vscode.cpptools",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "remoteUser": "devuser",
  "postCreateCommand": "echo 'âœ“ CPU-only development container loaded'"
}
